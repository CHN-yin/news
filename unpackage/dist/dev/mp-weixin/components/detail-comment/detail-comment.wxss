.comment-box__line {
  border-bottom: 1px solid #e6e6e6;
  margin: 10px 0;
}
.comment-box__head {
  display: flex;
  align-items: center;
  padding: 0 15px;
}
.comment-box__head__img {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  object-fit: cover;
}
.comment-box__head__info {
  flex: 1;
  padding-left: 10px;
}
.comment-box__head__name {
  margin-bottom: 4px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  white-space: normal !important;
  word-wrap: break-word;
}
.comment-box__head__time {
  font-size: 11px;
  color: #666;
}
.comment-box__content {
  padding: 0 15px;
  margin-top: 10px;
}
.comment-box__content__to-name {
  margin-right: 5px;
  font-weight: bold;
}
.comment-box__btn {
  display: inline-block;
  font-size: 12px;
  border: 1px solid #ccc;
  color: #999;
  border-radius: 20px;
  padding: 2px 10px;
  margin-top: 15px;
}
.comment-box__reply {
  margin-top: 10px;
  padding: 15px 0;
  border: 1px solid #eee;
}
.comment-box__item {
  margin-bottom: 10px;
}

