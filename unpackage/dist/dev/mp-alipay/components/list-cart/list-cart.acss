.base,
.many,
.big {
  display: flex;
  padding: 10px;
  margin: 10px;
  border-radius: 5px;
  box-shadow: 0 0 5px 1px rgba(0, 0, 0, 0.1);
}
.base__img,
.many__img,
.big__img {
  width: 70px;
  height: 70px;
  object-fit: cover;
  margin-right: 10px;
  border-radius: 5px;
}
.base-margin,
.many-margin,
.big-margin {
  margin: 10px 0;
}
.base__content,
.many__content,
.big__content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.base__content__title,
.many__content__title,
.big__content__title {
  position: relative;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal !important;
  word-wrap: break-word;
  padding-right: 25px;
}
.base__content__des,
.many__content__des,
.big__content__des {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
}
.base__content__des__label,
.many__content__des__label,
.big__content__des__label {
  border-radius: 50px;
  border: 1px solid #36ab60;
  color: #36ab60;
  padding: 0 5px;
}
.base__content__des__scan,
.many__content__des__scan,
.big__content__des__scan {
  color: #bbb;
}
.base__content__imgs,
.many__content__imgs,
.big__content__imgs {
  display: flex;
  margin: 10px 0;
}
.base__content__img,
.many__content__img,
.big__content__img {
  width: 100%;
  height: 70px;
  object-fit: cover;
  margin-left: 10px;
  border-radius: 5px;
}
.base__content__img:first-child,
.many__content__img:first-child,
.big__content__img:first-child {
  margin-left: 0;
}
.base__content__big-img,
.many__content__big-img,
.big__content__big-img {
  width: 100%;
  height: 100px;
  object-fit: cover;
  border-radius: 5px;
}

