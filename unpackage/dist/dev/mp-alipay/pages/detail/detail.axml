<view class="detail"><block a:if="{{loading}}"><view class="skin"></view></block><view class="detail__title _h2">{{detailData.title}}</view><view class="detail__author"><view class="detail__author__head"><image src="{{author.avatar}}" mode="aspectFit"></image></view><view class="detail__author__info"><view class="detail__author__name">{{author.author_name}}</view><view class="detail__author__tab"><view class="detail__author__tab__item">{{detailData.create_time}}</view><view class="detail__author__tab__item">{{detailData.browse_count+" 浏览"}}</view><view class="detail__author__tab__item">{{detailData.thumbs_up_count+" 赞"}}</view></view></view><view data-event-opts="{{[['tap',[['handleBtn',['$0'],['detailData._id']]]]]}}" class="detail__author__btn iconfont" onTap="__e">{{''+(detailData.is_author_like?'已关注':'关注')+''}}</view></view><view class="detail__content"><view class="detail__content__text"><u-parse vue-id="3da764f6-1" content="{{detailData.content}}" noData="加载中...." onVueInit="__l"></u-parse></view></view><view class="detail__line"></view><view class="comment-box"><view class="comment-box__title">精彩评论</view><view class="comment-box__item" a:for="{{commentList}}" a:for-item="item" a:for-index="__i0__" a:key="_id"><detail-comment vue-id="{{'3da764f6-2-'+__i0__}}" is_reply="{{false}}" comment="{{item}}" data-event-opts="{{[['^reply',[['reply']]]]}}" onReply="__e" onVueInit="__l"></detail-comment></view></view><block a:if="{{commentList.length<=0||commentList.length>5}}"><view><uni-load-more vue-id="3da764f6-3" status="{{status}}" iconType="auto" contentText="{{({contentnomore:'暂无更多评论'})}}" onVueInit="__l"></uni-load-more></view></block><view class="detail__tabbar"><view data-event-opts="{{[['tap',[['handleOpen',['$event']]]]]}}" class="detail__tabbar__left" onTap="__e"><text class="detail__tabbar__left__input">谈谈你的看法</text><text class="iconfont detail__tabbar__left__icon"></text></view><view class="detail__tabbar__right"><uni-badge vue-id="3da764f6-4" text="{{detailData.comments_count}}" absolute="rightTop" size="small" customStyle="{{$root.a0}}" onVueInit="__l" vue-slots="{{['default']}}"><view data-event-opts="{{[['tap',[['handleComment',['$event']]]]]}}" class="iconfont detail__tabbar__right__icon" onTap="__e"></view></uni-badge><view data-event-opts="{{[['tap',[['handleCollect',['$0'],['detailData._id']]]]]}}" class="iconfont detail__tabbar__right__icon" onTap="__e"><rich-text nodes="{{detailData.is_article_like?'&#xe684;':'&#xe643;'}}"></rich-text></view><view data-event-opts="{{[['tap',[['handleThumbs',['$0'],['detailData._id']]]]]}}" class="iconfont detail__tabbar__right__icon" onTap="__e"><rich-text nodes="{{detailData.is_thumbs_up_article?'&#xec8c;':'&#xec7f;'}}"></rich-text></view></view></view><uni-popup vue-id="3da764f6-5" type="bottom" maskClick="{{false}}" ref="__r" data-ref="popup" onVueInit="__l" vue-slots="{{['default']}}"><popup-comment vue-id="{{('3da764f6-6')+','+('3da764f6-5')}}" article_id="{{detailData._id}}" replyFormData="{{replyFormData}}" data-event-opts="{{[['^submit',[['submit']]],['^close',[['handleClose']]]]}}" onSubmit="__e" onClose="__e" onVueInit="__l"></popup-comment></uni-popup></view>