page {
  display: flex;
  height: 100%;
  color: #333;
}
.follow {
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.follow__header {
  padding: 10px 0;
  border-bottom: 1px solid #f5f5f5;
}
.follow__nav {
  display: flex;
  align-items: center;
  border: 1px solid #36ab60;
  border-radius: 5px;
  font-size: 14px;
  margin: 0 20px;
}
.follow__nav__item {
  flex: 1;
  text-align: center;
  padding: 5px 0;
}
.follow__nav__item:first-child {
  border-right: 1px solid #36ab60;
}
.follow__nav__item--active {
  color: #36ab60;
}
.follow__list {
  flex: 1;
}
.follow__list__swiper {
  height: 100%;
}
.follow__list__item {
  height: 100%;
}
.follow__list__null {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  font-size: 14px;
  color: #777;
}
.follow__author {
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #f5f5f5;
}
.follow__author__img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 10px;
}
.follow__author__img image {
  width: 100%;
  height: 100%;
}
.follow__author__info {
  flex: 1;
  font-size: 12px;
  margin-right: 10px;
}
.follow__author__name {
  font-size: 14px;
  font-weight: bold;
}
.follow__author__sketch {
  display: flex;
  justify-content: space-between;
  margin-top: 4px;
}
.follow__author__sketch__item {
  color: #555;
}
.follow__author__sketch__item:last-child {
  color: #999;
}
.follow__author__sketch__item:last-child text:last-child {
  margin-left: 10px;
}

